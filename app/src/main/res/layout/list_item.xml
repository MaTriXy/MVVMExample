<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    >

  <data>
    <variable
        name="avenger"
        type="com.pedro.avengersmvvm.retrofit.Avenger"
        />
  </data>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:gravity="center"
      >
    <TextView
        android:id="@+id/tv_name"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="@{avenger.name}"
        />
    <TextView
        android:id="@+id/tv_character"
        android:layout_below="@+id/tv_name"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="@{avenger.character}"
        />

    <TextView
        android:layout_below="@+id/tv_character"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="@{avenger.active ? @string/active : @string/inactive}"
        />
    <ImageView
        android:layout_alignParentEnd="true"
        android:scaleType="fitCenter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        bind:image="@{avenger.image}"
        />
  </RelativeLayout>
</layout>